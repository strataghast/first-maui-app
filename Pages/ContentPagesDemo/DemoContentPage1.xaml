<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMauiApp.Pages.DemoContentPage1"
             Title="DemoContentPage1"
             BackgroundColor="#B1C0C9">
    <VerticalStackLayout>
        <Label 
            Text="Decks"
            FontSize="Header"
            TextColor="#7B7C7F"
            FontAttributes="Bold"
            Margin="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            x:Name="pageBasicFlash"
            Text="C# Basic"
            Clicked="pageBasicFlash_Clicked"
            BackgroundColor="#7B7C7F"
            TextColor="White"
            Margin="30"
            BorderWidth="2"
            BorderColor="#96A3AA"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            x:Name="pageInterFlash"
            Text="C# Intermediate"
            Clicked="pageInterFlash_Clicked"
            BackgroundColor="#7B7C7F"
            TextColor="White"
            BorderWidth="2"
            BorderColor="#96A3AA"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>